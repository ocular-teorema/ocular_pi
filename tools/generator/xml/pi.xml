<poco version="5.0">
  <include name="base.xml"/>

  <class name="Decision Params" >
     <field type="double" name="Total Threshold"               defaultValue="0.05" min="0.0001" max="100" />
     <field type="int"    name="Valid motion bin height"       defaultValue="8"    min="2"      max="99999" />
  </class>

  <class name="Date Params" >
     <field type="bool"    name="Use virtual date"             defaultValue="false"/>
     <field type="int"     name="Year"                         defaultValue="2016" min="1970"   max="99999" />
     <field type="int"     name="Month"                        defaultValue="06"   min="1"      max="12"    />
     <field type="int"     name="Day"                          defaultValue="01"   min="1"      max="31"    />
     <field type="int"     name="Hour"                         defaultValue="12"   min="0"      max="23"    />
     <field type="int"     name="Minute"                       defaultValue="0"    min="0"      max="59"    />
  </class>

  <class name="Event Processing Params" >
      <field type="int"    name="Minimal Event Duration X"     defaultValue="1000"  min="1" max="3600000"  />
      <field type="int"    name="Maximal Event Duration Y"     defaultValue="60000" min="1" max="3600000"  />
      <field type="int"    name="Idle Event Duration Z"        defaultValue="5000"  min="1" max="3600000"  />
      <field type="int"    name="Ignore Interval W"            defaultValue="12000" min="1" max="36000000" />
  </class>

  <class name="Object Detection Params" >
      <field type="bool"   name="Debug objects"                defaultValue="false" />
      <field type="bool"   name="Experimental"                 defaultValue="false" />
      <field type="int"    name="Minimum Cluster"              defaultValue="50"   min="1" 	  max="999999" />
      <field type="int"    name="Dilate Size"                  defaultValue="10"   min="1"    max="999999" />
      <field type="int"    name="Bg threshold"         		   defaultValue="15"   min="1"    max="99999"  />
      <field type="double" name="Fg Threshold"                 defaultValue="40.0" min="1.0"  max="100.0" />
  </class>

  <class name="Analysis Params" >
    <embed type="Decision Params"           name="Des Params" />
    <embed type="Object Detection Params"   name="Detector Params"/>
    <embed type="Date Params"               name="Date Params" />

    <field type="double"    name="Downscale Coeff"             defaultValue="0.25" min="0.0001" max="10000" />
    <field type="double"    name="Motion Threshold"            defaultValue="0.2" min="0.0001" max="10000" />
    <field type="int"       name="Diff Threshold"              defaultValue="20"/>
    <field type="bool"      name="Produce Debug"               defaultValue="false"/>
    <field type="int"       name="DebugImageIndex"             defaultValue="0"/>

    <field type="bool"      name="Difference based analysis"   defaultValue="true"/>
    <field type="bool"      name="Motion based analysis"       defaultValue="true"/>
  </class>

  <class name="Common Pipeline Parameters">
       <field type="string" name="Pipeline Name"               defaultValue="cam"/>
       <field type="string" name="Camera name"                 defaultValue="Camera"/>
       <field type="string" name="Server address"              defaultValue="0.0.0.0"/>

       <field type="int"    name="fps"                         defaultValue="10"/>
       <field type="double" name="Global Scale"                defaultValue="0.5"/>
       <field type="string" name="Input Stream Url"            defaultValue="0"/>
       <field type="string" name="Output Url"                  defaultValue=""/>
       <field type="string" name="Source Output Url"           defaultValue=""/>
       <field type="string" name="Scaled Output Url"           defaultValue=""/>
       <field type="string" name="Database Path"               defaultValue="0"/>
       <field type="string" name="Archive Path"                defaultValue="0"/>

       <field type="int"    name="Output Stream Bitrate"       defaultValue="32" />
       <field type="int"    name="Processing Interval Sec"     defaultValue="600" />
       <field type="int"    name="statisticIntervalSec"        defaultValue="600" />
       <field type="int"    name="statisticPeriodDays"         defaultValue="14"  />

       <field type="int"    name="Notification event types"    defaultValue="2"/>
       <field type="int"    name="Notification event level"    defaultValue="80"/>
       <field type="string" name="Notification method"         defaultValue=""/>
       <field type="string" name="Notification start time"     defaultValue="00:00:00"/>
       <field type="string" name="Notification end time"       defaultValue="23:59:59"/>
       <field type="string" name="Notification phone"          defaultValue=""/>
       <field type="string" name="Notification email"          defaultValue=""/>
       <field type="string" name="Notification syserr email"   defaultValue=""/>
       <field type="string" name="Notification sms login"      defaultValue=""/>
       <field type="string" name="Notification sms password"   defaultValue=""/>
       <field type="string" name="Notification smtp address"   defaultValue=""/>
       <field type="string" name="Notification smtp login"     defaultValue=""/>
       <field type="string" name="Notification smtp password"  defaultValue=""/>
  </class>
</poco>

